<UserControl x:Class="WpfApplication.View.Metadata"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WpfApplication.ViewModel"
             xmlns:customcontrols="clr-namespace:WpfApplication.CustomControls"
             d:DataContext="{d:DesignInstance Type=vm:MetadataVM}"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="600"
             Style="{StaticResource Page_Style}">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="10*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>

            <StackPanel VerticalAlignment="Stretch"
                        Grid.Row="1" Margin="8">

                <customcontrols:CustomDataGrid x:Name="datagrid2"
                                               Background="White"
                                               Foreground="Black"
                                               HoverBackground="DarkGreen"/>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
